<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rodafleets.rodadriver.PersonalInfoSettings">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="?android:attr/actionBarSize">


        <RelativeLayout
            android:id="@+id/edit_profile_image"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:layout_gravity="center_vertical|center_horizontal">


            <ImageButton
                android:id="@+id/profile_image"
                android:layout_width="88.8dp"
                android:layout_height="80.2dp"
                android:layout_marginTop="26dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="19dp"
                android:background="#ffffff"
                app:srcCompat="@drawable/ic_user_black_big" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image"
                android:layout_centerHorizontal="true"
                android:text="Edit Profile Image"
                android:textColor="#765267"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="#e5e5e5">

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_marginStart="26dp"
                android:text="NAME"
                android:textColor="#7d7d7d"
                android:textSize="16sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/edit_number"
            android:layout_width="match_parent"
            android:layout_height="109dp" >

            <TextView
                android:id="@+id/phone_number_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="#7d7d7d"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="32dp"
                android:text="Phone Number" />

            <TextView
                    android:id="@+id/phone_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/phone_number_message"
                android:layout_alignStart="@+id/phone_number_message"
                android:layout_below="@+id/phone_number_message"
                android:text="123456789"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/number_edit_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                app:srcCompat="@mipmap/edit_offer"
                android:background="#765267"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/edit_number"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#e5e5e5" />


        <RelativeLayout
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="98dp" >

            <TextView
                android:id="@+id/password_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="12sp"
                android:textColor="#7d7d7d"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="32dp"
                android:text="Password" />

            <TextView
                android:id="@+id/password_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/password_message"
                android:layout_alignStart="@+id/password_message"
                android:layout_below="@+id/password_message"
                android:text="123456789"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/password_edit_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                app:srcCompat="@mipmap/edit_offer"
                android:background="#765267"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/edit_password"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#e5e5e5" />
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
