<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rodafleets.rodadriver.vehicle_details_settings">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/vehicle_number"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white" />

        <RelativeLayout
            android:id="@+id/vehicle_number"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="#e5e5e5">

            <TextView
                android:id="@+id/vehicle_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="27dp"
                android:text="Vehicle Number"
                android:textColor="#7d7d7d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vehicle_number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/vehicle_number_text"
                android:layout_below="@+id/vehicle_number_text"
                android:layout_marginTop="4dp"
                android:text="NA"
                android:textColor="#000000"
                android:textSize="18dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/vehicle_type"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white" />

        <RelativeLayout
            android:id="@+id/vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="#e5e5e5">

            <TextView
                android:id="@+id/vehicle_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="27dp"
                android:text="Vehicle Type"
                android:textColor="#7d7d7d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vehicle_type_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/vehicle_type_text"
                android:layout_below="@+id/vehicle_type_text"
                android:layout_marginTop="4dp"
                android:text="NA"
                android:textColor="#000000"
                android:textSize="18dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/manufacturer"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white" />

        <RelativeLayout
            android:id="@+id/manufacturer"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="#e5e5e5">

            <TextView
                android:id="@+id/vehicle_manufacturer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="27dp"
                android:text="Manufacturer"
                android:textColor="#7d7d7d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vehicle_manufacturer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/vehicle_manufacturer_text"
                android:layout_below="@+id/vehicle_manufacturer_text"
                android:layout_marginTop="4dp"
                android:text="NA"
                android:textColor="#000000"
                android:textSize="18dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignTop="@id/model"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/white" />

        <RelativeLayout
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:background="#e5e5e5">

            <TextView
                android:id="@+id/vehicle_model_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="27dp"
                android:text="Model"
                android:textColor="#7d7d7d"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/vehicle_model_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/vehicle_model_text"
                android:layout_below="@+id/vehicle_model_text"
                android:layout_marginTop="4dp"
                android:text="NA"
                android:textColor="#000000"
                android:textSize="18dp" />

        </RelativeLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
